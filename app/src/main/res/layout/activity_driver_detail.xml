<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <ImageView
        android:id="@+id/profileURL"
        android:layout_width="match_parent"
        android:layout_height="250dp" />


        <View
            android:layout_width="match_parent"
            android:background="#000"
            android:alpha="0.5"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/back_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/call_icon" />



            <ImageView
                android:id="@+id/shareIcon"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/starIcon"
                android:layout_width="28dp"
                android:layout_marginStart="8dp"
                android:layout_height="28dp"
                android:src="@drawable/share_all" />




        </LinearLayout>




    <Button
        android:id="@+id/bookAppointmentButton"
        android:layout_marginTop="225dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:textAllCaps="false"
        />

    </RelativeLayout>

    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krishna Parajul"
        android:textSize="20dp"
        android:layout_marginTop="28dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginStart="20dp" />


    <TextView
        android:id="@+id/driverDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the detail of the appliation profilesection including the multile text not sure whathappened"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating:"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="21dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />




        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#FFBF00"
            android:numStars="5"
            android:rating="4.5" />
    </LinearLayout>





</LinearLayout>